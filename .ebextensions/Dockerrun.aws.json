{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "username/business_tier:latest",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000
        }
      ]
    },
    {
      "name": "frontend",
      "image": "username/presentation_tier:latest",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 8000,
          "containerPort": 80
        }
      ]
    },
    {
      "name": "data",
      "image": "username/data_tier:latest",
      "essential": true,
      "memory": 256,
      "portMappings": [
        {
          "hostPort": 27017,
          "containerPort": 27017
        }
      ]
    }
  ]
}
